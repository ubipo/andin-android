<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SearchResultsFragment">

    <data>

        <variable
            name="vm"
            type="net.pieterfiers.andin.MapViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/ToolbarTheme"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ToolbarPopupTheme" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility='@{vm.searchResults == null}'
                android:gravity="center"
                android:text="Searching..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility='@{vm.searchResults.empty}'
                android:gravity="center"
                android:text='@{"There where no results for \"" + vm.query + "\""}' />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility='@{!vm.searchResults.empty}' />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
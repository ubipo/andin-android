<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="net.pieterfiers.andin.MapViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/ToolbarTheme"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ToolbarPopupTheme"
            app:subtitle='@{vm.currentLevel != null ? "Level: " + vm.currentLevel : null}' />

        <fragment
            android:id="@+id/slippymapFragment"
            android:name="net.pieterfiers.andin.view.fragments.support.SlippymapMapboxFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintVertical_bias="0.531"
            tools:layout="@layout/fragment_slippymap_mapbox" />

        <com.leinardi.android.speeddial.SpeedDialView
            android:id="@+id/layersSpeedDial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:sdMainFabClosedSrc="@drawable/ic_layers_white_24"
            app:sdMainFabOpenedSrc="@drawable/ic_close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
